@model PruebaTartejasBECH.Models.Sucursal

@{
    ViewBag.Title = "Agregar Sucursal";
}

<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header">@ViewBag.Title</h3>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="col-md-6 col-md-offset-3">
            <!--FORMULARIO AGREGAR CURSO (ARREGLAR)-->
            @using (Html.BeginForm("AgregarSucursal", "Sucursal", new { ReturnURL = ViewBag.ReturnURL }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)

                <div class="panel panel-info">
                    <!-- Default panel contents -->
                    <div class="panel-heading">Sucursal</div>
                    <div class="panel-body">
                        
                    </div>
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true)
                            
                        <div class="form-group">
                            @Html.LabelFor(m => m.nombre_sucursal, new { @class = "col-md-4 control-label" })
                            <div class="col-md-8">
                                @Html.TextBoxFor(m => m.nombre_sucursal, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.nombre_sucursal)
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.region_sucursal, new { @class = "col-md-4 control-label" })
                            <div class="col-md-8">
                                @Html.TextBoxFor(m => m.region_sucursal, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.region_sucursal)
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.serviEstado_sucurcal, new { @class = "col-md-4 control-label" })
                            <div class="col-md-8">
                                @Html.TextBoxFor(m => m.serviEstado_sucurcal, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.serviEstado_sucurcal)
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.zona_sucursal, new { @class = "col-md-4 control-label" })
                            <div class="col-md-8">
                                @Html.TextBoxFor(m => m.zona_sucursal, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.zona_sucursal)
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-4 col-md-8">
                                <input type="submit" value="Guardar" class="btn btn-primary" />
                                <a href="~/Home/Index" class="btn btn-danger">Cancelar</a>
                            </div>
                        </div>
                </div>
                
            }
    </div>
</div>
</div>
